@{
}
<h1>Edytuj producenta</h1>
<form asp-controller="Manufacturer" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class = "form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="WebsiteUrl"></label>
        <input class="form-control" asp-for="WebsiteUrl" />
        <span class="text-danger" asp-validation-for="WebsiteUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address.Country"></label>
        <input class="form-control mb-3" asp-for="Address.Country" />
        <label asp-for="Address.City"></label>
        <input class="form-control mb-3" asp-for="Address.City" />
        <label asp-for="Address.Street"></label>
        <input class="form-control mb-3" asp-for="Address.Street" />
        <label asp-for="Address.PostalCode"></label>
        <input class="form-control mb-3" asp-for="Address.PostalCode" />
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Edytuj</button>
    </div>
</form>
