@using lab3_App.Models
@model List<Manufacturer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista producentów</h1>
<a class="btn btn-primary" asp-controller="Manufacturer" asp-action="Create">Dodaj producenta</a>
@if(Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].WebsiteUrl)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.WebsiteUrl
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Manufacturer" asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-outline-info" asp-controller="Manufacturer" asp-action="Details" asp-route-id="@item.Id">Szczegoly</a>
                        <a class="btn btn-outline-danger" asp-controller="Manufacturer" asp-action="Delete" asp-route-id="@item.Id">Usun</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

