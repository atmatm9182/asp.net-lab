@using lab3_App.Models
@model List<Computer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista komputerow</h1>
<a class="btn btn-primary" asp-controller="Computer" asp-action="Create">Utworz nowy komputer</a>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(_ => Model.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(_ => Model.First().CPU)
        </th>
        <th>
            @Html.DisplayNameFor(_ => Model.First().RAM)
        </th>
        <th>
            Akcje
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CPU
                </td>
                <td>
                    @item.RAM GB
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Computer" asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-outline-info" asp-controller="Computer" asp-action="Details" asp-route-id="@item.Id">Szczegoly</a>
                    <a class="btn btn-outline-danger" asp-controller="Computer" asp-action="Delete" asp-route-id="@item.Id">Usun</a>
                </td>
            </tr>
        }
    </tbody>
</table>