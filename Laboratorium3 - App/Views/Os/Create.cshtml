@{
}
<h1>Dodaj system operacyjny</h1>
<form asp-controller="OperatingSystem" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input class = "form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Version"></label>
        <input class = "form-control" asp-for="Version"/>
        <span class="text-danger" asp-validation-for="Version"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ReleaseYear"></label>
        <input class = "form-control" asp-for="ReleaseYear"/>
        <span class="text-danger" asp-validation-for="ReleaseYear"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Utwórz</button>
    </div>
</form>